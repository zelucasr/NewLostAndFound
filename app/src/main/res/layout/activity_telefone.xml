<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_telefone"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="20dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    tools:context="br.ufrn.stronda.newlostandfound.Activity.TelefoneActivity"
    android:background="@color/colorbg">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Editar Perfil"
        android:textAlignment="center"
        android:textSize="50dp"
        android:textColor="#FFFFFF"
        />

    <EditText
        android:inputType="phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/telefoneeditar"
        android:hint="Telefone"
        android:textSize="15dp"
        android:textColor="#FFFFFF"
        android:layout_marginTop="300dp"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:layout_centerHorizontal="true"
        android:hint="Nome"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:id="@+id/nomeeditar"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="240dp"
        android:id="@+id/emaileditar"
        android:textSize="15dp"
        android:textColor="@color/textcolor"
        android:hint="Email"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circlebtn"
        android:text="Confirmar"
        android:textColor="#FFFFFF"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/prosseguirBtn"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circlebtn"
        android:text="Cancelar"
        android:textColor="#FFFFFF"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/cancelarBtn"/>



</RelativeLayout>
